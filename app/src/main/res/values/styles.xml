<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolboxStyle">
        <item name="android:layout_width">@dimen/toolbar_icon_size</item>
        <item name="android:layout_height">@dimen/toolbar_icon_size</item>
        <item name="android:text">Tool</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorReadyButton</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolButtonStyle">
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/playAudioFileSelectAudioClipButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="ToolTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
