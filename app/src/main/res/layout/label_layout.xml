<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/label_main_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_sample_textview"
        style="@style/ToolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Sample Label"
        android:textSize="48sp" />

    <include layout="@layout/label_properties_boss_layout"
        android:id="@+id/label_properties_boss_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>