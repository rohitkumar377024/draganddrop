<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_property_super_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/label_bottom_buttons_ll"
    android:background="@color/colorPropertiesBG"
    android:padding="8dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/frame_property_title_txtview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:layout_weight="1"
        android:fontFamily="@font/helvetica_neue_light"
        android:gravity="center"
        android:text="Frame"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="21sp" />

    <!--    android:background="@drawable/properties_left_round"-->

    <Button
        android:id="@+id/frame_property_select_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:background="@drawable/properties_all_round"
        android:fontFamily="@font/helvetica_neue_light"
        android:text="Select"
        android:textAllCaps="false"
        android:textColor="@color/colorMainYellow"
        android:textSize="21sp" />
</LinearLayout>