<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/colorPropertiesBG"
        android:id="@+id/play_audio_file_super_main_ll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/helvetica_neue_medium"
            android:textColor="@android:color/white"
            android:background="@drawable/properties_no_round"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/play_audio_file_title_txtview"
            style="@style/ToolTextStyle"
            android:text="Play an Audio File" />
        <ImageView
            android:layout_margin="5dp"
            android:visibility="gone"
            android:id="@+id/play_audio_file_play_audio_imgview"
            android:background="@color/playAudioFileMakeChangesButton"
            android:layout_toRightOf="@id/play_audio_file_title_txtview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_play_audio"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ToggleButton
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/play_audio_file_experiment_play_toggle_btn"
            android:textColor="@color/playAudioFilePlaybackButton"
            android:fontFamily="@font/helvetica_neue_light"
            android:background="@drawable/properties_no_round"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/ToolButtonStyle"
            android:textOff="Play"
            android:textOn="Stop" />
    </LinearLayout>

    <include layout="@layout/play_audio_file_properties_boss_layout"
        android:id="@+id/play_audio_file_properties_boss_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>